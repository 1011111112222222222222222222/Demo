
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using EF.Models;
@model IEnumerable<Product>
<div class="container">
    <div class="row">
        @foreach (Product s in Model)
        {

            <div class="col-lg-3 card mr-2 mt-2 text-center">
                <div class="card-product">
                    <img src="~/Content/book/@s.Image" alt="Alternate Text" style="width:300px; height:350px;" />
                    @s.Productname
                    <div class="card-body">
                        <button class="btn-dark">Chọn sách</button>
                        @Html.ActionLink("chi tiết sách", "detail", "Demo", new { id = @s.Id }, new { @class = "btn btn-warning" })

                    </div>
                </div>

            </div>
      
    }
    </div>
    </div>

